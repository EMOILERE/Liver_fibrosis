<?xml version="1.0" encoding="UTF-8"?>
<!-- 基础测试配置 - 快速验证模拟是否正常工作 -->
<simulation_parameters>
    <basic_settings>
        <simulation_time>720</simulation_time> <!-- 12小时快速测试 -->
        <time_steps>
            <diffusion_dt>0.01</diffusion_dt>
            <mechanics_dt>0.1</mechanics_dt>
            <phenotype_dt>6</phenotype_dt>
        </time_steps>
        <domain>
            <size_x>600</size_x> <!-- 较小域以加快计算 -->
            <size_y>600</size_y>
            <resolution>20</resolution>
        </domain>
        <output>
            <save_interval>30</save_interval> <!-- 更频繁保存以观察动态 -->
            <svg_interval>30</svg_interval>
        </output>
    </basic_settings>

    <cell_population>
        <initial_cell_count>50</initial_cell_count> <!-- 较少细胞 -->
        <initial_activation_fraction>0.0</initial_activation_fraction>
        <cell_biology>
            <quiescent_cycle_time>2000</quiescent_cycle_time>
            <activated_cycle_time>1000</activated_cycle_time>
            <apoptosis_rate>0.0001</apoptosis_rate>
            <motility>
                <quiescent_speed>0.2</quiescent_speed>
                <activated_speed>1.0</activated_speed>
            </motility>
        </cell_biology>
    </cell_population>

    <microenvironment>
        <TGF_beta1>
            <concentration>10.0</concentration>
            <diffusion_coefficient>50000.0</diffusion_coefficient>
            <decay_rate>0.01</decay_rate>
        </TGF_beta1>
        <exosomes>
            <concentration>50.0</concentration>
            <diffusion_coefficient>5000.0</diffusion_coefficient>
            <decay_rate>0.005</decay_rate>
        </exosomes>
        <fibrosis_markers>
            <alpha_SMA>
                <diffusion_coefficient>10000.0</diffusion_coefficient>
                <decay_rate>0.02</decay_rate>
            </alpha_SMA>
            <collagen_I>
                <diffusion_coefficient>5000.0</diffusion_coefficient>
                <decay_rate>0.005</decay_rate>
            </collagen_I>
        </fibrosis_markers>
    </microenvironment>

    <cell_activation>
        <TGF_beta1_response>
            <activation_threshold>5.0</activation_threshold>
            <activation_rate>0.01</activation_rate>
            <deactivation_rate>0.005</deactivation_rate>
            <hill_coefficient>2.0</hill_coefficient>
        </TGF_beta1_response>
        <activated_phenotype>
            <alpha_SMA_production>
                <quiescent_rate>0.1</quiescent_rate>
                <activated_rate>2.0</activated_rate>
            </alpha_SMA_production>
            <collagen_I_production>
                <quiescent_rate>0.05</quiescent_rate>
                <activated_rate>1.5</activated_rate>
            </collagen_I_production>
        </activated_phenotype>
    </cell_activation>

    <exosome_miRNA_system>
        <exosome_uptake>
            <uptake_rate>1.0</uptake_rate>
            <uptake_threshold>0.1</uptake_threshold>
            <miRNA_release_efficiency>0.1</miRNA_release_efficiency>
        </exosome_uptake>
        <miRNA_kinetics>
            <degradation_rate>0.01</degradation_rate>
            <effect_threshold>0.1</effect_threshold>
            <max_effect>0.8</max_effect>
            <hill_coefficient>2.0</hill_coefficient>
        </miRNA_kinetics>
        <miRNA_specificity>
            <miR_455_3p>
                <alpha_SMA_inhibition>0.9</alpha_SMA_inhibition>
                <collagen_I_inhibition>0.2</collagen_I_inhibition>
            </miR_455_3p>
            <miR_148a_5p>
                <alpha_SMA_inhibition>0.2</alpha_SMA_inhibition>
                <collagen_I_inhibition>0.9</collagen_I_inhibition>
            </miR_148a_5p>
        </miRNA_specificity>
    </exosome_miRNA_system>

    <synergy_mechanism>
        <synergy_threshold>0.1</synergy_threshold>
        <max_synergy_factor>2.5</max_synergy_factor> <!-- 标准协同效应 -->
        <synergy_model>geometric</synergy_model>
        <synergy_delay>30</synergy_delay>
        <synergy_saturation>1.0</synergy_saturation>
    </synergy_mechanism>

    <experimental_conditions>
        <current_experiment>dual_miRNA_1_1</current_experiment> <!-- 测试协同效应 -->
        <experiment_groups>
            <control>
                <TGF_beta1_enabled>false</TGF_beta1_enabled>
                <exosomes_enabled>false</exosomes_enabled>
            </control>
            <positive_model>
                <TGF_beta1_enabled>true</TGF_beta1_enabled>
                <exosomes_enabled>false</exosomes_enabled>
            </positive_model>
            <dual_miRNA_1_1>
                <TGF_beta1_enabled>true</TGF_beta1_enabled>
                <exosomes_enabled>true</exosomes_enabled>
                <miR_455_3p_ratio>0.5</miR_455_3p_ratio>
                <miR_148a_5p_ratio>0.5</miR_148a_5p_ratio>
            </dual_miRNA_1_1>
        </experiment_groups>
    </experimental_conditions>

    <advanced_parameters>
        <random_seed>12345</random_seed> <!-- 固定种子以便重现 -->
        <numerical_precision>
            <tolerance>1e-6</tolerance>
            <max_iterations>1000</max_iterations>
        </numerical_precision>
        <performance>
            <omp_threads>4</omp_threads> <!-- 较少线程以避免资源竞争 -->
            <memory_limit>4</memory_limit>
        </performance>
        <debugging>
            <verbose_output>true</verbose_output> <!-- 启用详细输出 -->
            <log_level>2</log_level>
        </debugging>
    </advanced_parameters>
</simulation_parameters>
