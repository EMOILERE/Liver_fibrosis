# Include package data files
include README.md
include LICENSE
include requirements.txt
include setup.py
include Makefile
include main.cpp
include *.sh

# Include configuration files
recursive-include config *.xml *.csv *.py
recursive-include example_configs *.xml

# Include custom modules
recursive-include custom_modules *.cpp *.h

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include package source
recursive-include liver_fibrosis_sim *.py

# Exclude unwanted files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude .DS_Store
global-exclude .git*
global-exclude *.o
global-exclude core.*
global-exclude output*
global-exclude synthetic_results*
global-exclude visualization_outputs*
global-exclude *.svg
global-exclude *.png
global-exclude *.gif
global-exclude *.html
